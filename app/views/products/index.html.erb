<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th>Location</th>
      <th>Description</th>
      <th>Active</th>
      <th>Category</th>
      <th>Keywords</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.cost %></td>
        <td><%= product.location %></td>
        <td><%= product.description %></td>
        <td><%= product.active %></td>
        <td><%= product.category %></td>
        <td><%= product.keywords %></td>
        <td><%= link_to 'Show', business_product_path(id: product.id) %></td>
        <td><%= link_to 'Edit', edit_business_product_path(id: product.id) %></td>
        <td><%= link_to 'Destroy', business_product_path(id: product.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

