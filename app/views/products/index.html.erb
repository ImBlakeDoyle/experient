<%=render "partials/product_search"%>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th>Location</th>
      <th>Description</th>
      <th>Active</th>
      <th>Category</th>
      <th>Keywords</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.cost %></td>
        <td><%= product.location %></td>
        <td><%= product.description %></td>
        <td><%= product.active %></td>
        <td><%= product.category %></td>
        <td><%= product.keywords %></td>
        <td><%=link_to "View Detail",business_product_path(business_id: product.user.id, id: product.id)%></td>
    
      </tr>
    <% end %>
  </tbody>
</table>

