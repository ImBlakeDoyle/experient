<%= current_user.first_name%>
<%=  "#{@hasavatar}" %>

<% if current_user.avatar == nil%>
    <%= form_with url: profile_path, local: true do |f| %>
        <%= f.label "Upload Avatar"%>
        <%= f.file_field :avatar%>

        <%= f.submit%>
    <% end %>
<% end %>

<%= link_to "Sign out", destroy_user_session_path, method: :delete%>