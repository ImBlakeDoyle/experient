Hi <%= current_user.first_name.capitalize%> 
<%= link_to('Sign out', destroy_user_session_path, method: :delete)%>
| <%= link_to "Edit profile", edit_user_registration_path(current_user)%>
<% if current_user.avatar.present?%>
    <div>
    <%= image_tag current_user.avatar_url%>
    <% @hasavatar = "Edit Avatar"%>
    <%= render "/partials/avatar_upload"%>
    </div>
<% else %>
    <p>You don't currently have an avatar</p>
    <% @hasavatar = "Upload Avatar"%>
    <%= render "/partials/avatar_upload"%>
<% end %>


<h2> Purchases </h2>
<% @transactions.each do |x|%>
    <div><%= x.product.name%></div>
    <% if x.product.product_review_id.present? %>
      <div> Rating: <%= x.product_id.product_review_id.rating %></div> 
      <div> Comment: <%= x.product_id.product_review_id.comment%></div>
      <%= link_to "Edit review", edit_product_review_path(x.id, product_id: x.product_id)%>
    <% else %>
      <%= link_to "Create review", new_product_review_path(product_id: x.id)%>
    <% end %>
<% end %>

<% if current_user.is_supplier == true %>
