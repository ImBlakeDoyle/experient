Hi <%= current_user.first_name.capitalize%>
<% if current_user.avatar.present?%>
    <div>
    <%= image_tag current_user.avatar_url%>
    <% @hasavatar = "Edit Avatar"%>
    </div>
<% else %>
    <p>You don't currently have an avatar</p>
    <% @hasavatar = "Upload Avatar"%>
<% end %>
<%= form_with url: profile_path, local: true do |f| %>
    <%= f.label "#{@hasavatar}"%>
    <%= f.file_field :avatar%>
    <%= f.submit%>
<% end %>

<h2> Product Reviews </h2>
<% @productreview.each do |x|%>
    <div><%= x.product.name%></div>
    <div> Rating: <%= x.rating %></div>
    <div> Comment: <%= x.comment%></div>
    <%= link_to "Edit review", edit_product_review_path(x.id)%>
<% end %>



<%= link_to "Sign out", destroy_user_session_path, method: :delete%>

   

