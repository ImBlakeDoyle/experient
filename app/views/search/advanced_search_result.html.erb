<h1>Advance Search Result</h1>
<p>search > advance_search_result</p>

<%if @result==[]%>
<p>Nothing to display, please try again </p>
<%else%>
  <% @result.each do |result| %>

    <h3>Title: <%= result.name%></h3>
    <div>Price: $<%= result.cost %></div>
    <div>Location: <%= result.location %></div>
    <div>keywords: <%= result.keywords %></div>
    <div>Description: <%= result.description %></div>
    
    <br>
  <% end %>
<%end%>