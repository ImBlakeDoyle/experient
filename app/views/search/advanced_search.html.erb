<%= form_with model: @search,local:true do |form|%>
    <div class="field">
        <%= form.label :keywords%>
        <%= form.text_field :keywords%>
    </div>

    <div class="field">
        <%= form.label :category%>
        <%= form.text_field :category%>
         <%# options_for_select(@categories), :include_blank =>true %> 
    </div>

    <div class="field">
        <%= form.label  :cost, "Min Price"%> - <%= form.text_field :cost, size: 10%>
        <%= form.label  :cost, "Max Price"%> - <%= form.text_field :cost, size: 10%>
        <%= form.text_field :keywords%>
    </div>

    <div class="field">
        <%= form.select :age_group_id, @groups %>
                 
    </div>

    <div class= "field">
        <%= form.label :active, "Rating:"%>
    </div>

    <div class="action">
        <%=form.submit "Search",class:"pure-button pure-button-primary"%>
    </div>

<%end%>


    