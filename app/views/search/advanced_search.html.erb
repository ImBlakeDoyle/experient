<h1> Advance Search</h1>
<%# <p>View>search>advanced_search.html.erb</p> %>
<%# 
<%= text_field_tag :search, params[:search]%> 

<%= form_with url: advanced_search_path,local:true do |form|%>
    <div class="form-group">
        <%= form.label "Keywords*"%>
        <%= form.text_field :keywords, class: "form-control" %>
    </div>

    
    <div class="form-group">
        <%= form.label  :min_cost, "Min Price"%> - <%= form.text_field :max_cost, size: 10, class: "form-control" %>
        <%= form.label  :max_cost, "Max Price"%> - <%= form.text_field :max_cost, size: 10, :value=>"10000", class: "form-control"%>
    </div>

     <div class="form-group">
        <%= form.label "Category"%>
        <%= form.select :category_id,  @category %>
    </div>

    <div class="form-group">
        <%=form.label "Age Group"%>
        <%= form.select :age_group_id,  @groups %>
                 
    </div>

    <div class="action form-group">
        <%=form.submit "Search", class: "btn btn-primary" %>
    </div>

<%end%>
<p>(* necessary field)</p>


    